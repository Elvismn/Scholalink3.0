{
  "name": "scholalink-frontend",
  "version": "1.0.0",
  "description": "School Management System Frontend",
  "scripts": {
    "dev:admin": "cd admin-portal && npm run dev",
    "dev:parent": "cd parent-portal && npm run dev",
    "dev:all": "concurrently \"npm run dev:admin\" \"npm run dev:parent\"",
    "build:admin": "cd admin-portal && npm run build",
    "build:parent": "cd parent-portal && npm run build",
    "build:all": "npm run build:admin && npm run build:parent",
    "preview:admin": "cd admin-portal && npm run preview",
    "preview:parent": "cd parent-portal && npm run preview"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
